<div class="fos_user_user_show">
    <h1>{{ user.username }}</h1>
    <p>Birthday: {{ user.birthday|date("m/d/Y") }}</p>
    <p>Affiliation: {{ user.party|capitalize }}</p>
    <p>Work: {{ user.occupation|title }}</p>
    <p>Education: {{ user.education }}</p>
    <p>Location: {{ user.location }}</p>
    <p>Gender: {{ user.gender }}</p>
    <p>Ethnicity: {{ user.ethnicity }}</p>
    <p>Registered Voter?: {{ user.registeredVoter }}</p>
    <p>Movements: {% for movement in user.movements %} <a href=" {{ path("app_movements_view", {'id': movement.id}) }} ">{{ movement.title }}</a> {% else %} None{% endfor %}
</div>
