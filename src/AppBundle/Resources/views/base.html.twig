                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            <link rel="shortcut icon" href="favicon.ico" />
            <title>uGovern: {% block title %}{% endblock %}</title>
        {% endblock %}
    </head>
    <body>
        <div id="navigation">
        	<a href="{{ path("app_user_homepage") }}">Home</a> 
	        {% if is_granted('IS_AUTHENTICATED_FULLY') %} 
	        	| <a href="{{ path("app_user_view", {'id': app.user.id}) }}">Citizen Profile</a> 
	        	| <a href="{{ path("app_movements_viewAll") }}">Movements</a>
	        	| <a href="{{ path("fos_user_security_logout") }}">Logout</a>
	        {% else %} 
	        	| <a href="{{ path("fos_user_security_login") }}">Login</a>
	        {% endif %} 
        </div>
        <br>
        <div id="content">{% block content %}{% endblock %}</div>
        <div id="footer" style="position: fixed; bottom: 50px; right: 20px;">
            {% block footer %}
